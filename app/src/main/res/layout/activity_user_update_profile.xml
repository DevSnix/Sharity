<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UserUpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_shape_profile"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <!-- Update Profile Picture Button -->
        <Button
            android:id="@+id/btnUpdateProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/light_orange"
            android:padding="12dp"
            android:text="Update Profile Picture"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <!-- User Details Section -->
        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etUserPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etUserAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Address"
            android:inputType="textPostalAddress" />

        <!-- Save and Exit Button -->
        <Button
            android:id="@+id/btnSaveAndExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/light_orange"
            android:padding="16dp"
            android:text="Save and Exit"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Re-login to see changes TextView at the bottom -->
    <TextView
        android:id="@+id/tvReloginNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Re-login to see changes"
        android:textAlignment="center"
        android:textSize="30sp" />
</RelativeLayout>


