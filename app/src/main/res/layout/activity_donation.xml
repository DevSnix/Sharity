<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationActivity">


    <TextView
        android:id="@+id/tvDonateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate to Charity"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Add other views for donation form -->
    <Button
        android:id="@+id/btnMaterialDonation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Donation"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        android:layout_below="@id/tvDonateHeader"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnPaypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate Through PayPal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_below="@id/btnMaterialDonation"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGooglePay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate Using Google Pay"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_below="@id/btnPaypal"
        android:layout_marginTop="16dp" />

</RelativeLayout>